{
    email help@cybermonkey.net.au  # Email for Let's Encrypt
    auto_https on                 # Automatically enable HTTPS
}

cybermonkey.dev {
    reverse_proxy http://vhost5:8080 {
        health_uri /healthz        # Optional: Check health if your app provides it
        health_interval 10s       # Optional: Periodic health checks
    }

    log {
        output file /var/log/caddy/hecate-access.log
        format json
    }

    tls {
        on_demand                 # Generate TLS certificates as needed
    }
}